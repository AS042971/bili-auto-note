{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "title": "轴发布配置文件",
  "description": "调用轴发布程序时提供的配置",
  "properties": {
    "cookie": {
      "description": "发送笔记用户的cookie",
      "type": "string"
    },
    "bvid": {
      "description": "目标视频BV号",
      "type": "string",
      "maxLength":12,
      "minLength":12
    },
    "template": {
      "description": "笔记模板文件路径",
      "type": "string"
    },
    "timeline": {
      "description": "时间轴文件路径",
      "type": "string"
    },
    "tokens":{
      "description": "用于识别不同分P的类型",
      "type": "array",
      "items": {
        "description": "分P类型的配置信息",
        "properties": {
          "key": {
            "description": "用于推断分P归属的标识符。将自上而下进行匹配，没有填写key的条目将作为默认值终止后续的匹配过程",
            "type": "string"
          },
          "offsets": {
            "description": "目标视频每个分P的开始时刻对应的统一时间轴时刻",
            "type": "array",
            "items": {
              "anyOf":[
                {
                  "description": "分P开始时刻",
                  "type": "integer"
                },
                {
                  "description": "根据上一P开始时刻和时长自动推断分P开始时刻",
                  "const": "auto"
                },
                {
                  "description": "跳过这个分P",
                  "const": "skip"
                }
              ]
            }
          },
          "marker": {
            "description": "显示在时间胶囊中的跳转标签",
            "type": "string"
          },
          "jumpOpDesc": {
            "description": "跳过OP按钮的说明",
            "type": "string"
          }
        }
      }
    },
    "ignoreThreshold": {
      "description": "时长短于此值的分P将被忽略，单位为秒",
      "type": "integer",
      "default": 600,
      "minimum": 0
    },
    "cover": {
      "description": "视频转制通过时发送至评论区的文案",
      "type": "string",
      "minLength": 1,
      "maxLength": 85
    },
    "hidePart": {
      "description": "是否隐藏时间胶囊中的分P字段",
      "type": "boolean"
    },
    "publish": {
      "description": "是否自动发布",
      "type": "boolean"
    },
    "autoComment": {
      "description": "是否发布完自动投评论",
      "type": "boolean"
    },
    "watch": {
      "description": "是否监控视频和笔记更新",
      "type": "boolean"
    },
    "confirm": {
      "description": "发布前是否确认",
      "type": "boolean"
    },
    "titlePrefix": {
      "description": "轴内标题前缀（含控制字）",
      "type": "string"
    },
    "titlePostfix": {
      "description": "轴内标题后缀",
      "type": "string"
    },
    "subTitlePrefix": {
      "description": "轴内小标题前缀（含控制字）",
      "type": "string"
    },
    "subTitlePostfix": {
      "description": "轴内小标题后缀",
      "type": "string"
    },
    "songDanceTitle": {
      "description": "歌舞导航标题",
      "type": "string"
    }
  },
  "required": [
    "cookie",
    "bvid",
    "timeline",
    "cover",
    "publish",
    "template"
  ]
}